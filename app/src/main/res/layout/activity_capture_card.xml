<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CaptureCard">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"

        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Capture a clear picture of CARD only"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/capture_card"
        android:id="@+id/capturedPicture"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnCapture"
        style="@style/allHomeButtons"
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Capture Now"
        android:background="@drawable/green_background_button"
        />
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnCaptureContinue"
        style="@style/allHomeButtons"
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continue"
        android:background="@drawable/green_background_button"
        />

</LinearLayout>